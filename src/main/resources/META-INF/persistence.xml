<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

    <persistence-unit name="pu_hibernate">

        <class>org.example.entities.BaseEntity</class>
        <class>org.example.entities.Person</class>
        <class>org.example.entities.League</class>
        <class>org.example.entities.Team</class>
        <class>org.example.entities.Match</class>
        <class>org.example.entities.Manager</class>
        <class>org.example.entities.Player</class>
        <class>org.example.entities.TeamStats</class>
        <class>org.example.entities.attributes.GKAttributes</class>
        <class>org.example.entities.attributes.MentalAttributes</class>
        <class>org.example.entities.attributes.PhysicalAttributes</class>
        <class>org.example.entities.attributes.TechnicalAttributes</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.postgresql.Driver" />

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/FutbolApp_Hibernate" />

            <property name="jakarta.persistence.jdbc.user"
                      value="postgres" />

            <property name="jakarta.persistence.jdbc.password"
                      value="root" />

            <property name="hibernate.show_sql"
                      value="false" />

            <property name="hibernate.hbm2ddl.auto"
                      value="update" />
        </properties>

    </persistence-unit>

</persistence>